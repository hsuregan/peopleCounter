    $(document).ready(function(){
        var max = $('#max');
        $('#submit').click(function() {
            if(!isNaN(max.val())) {
                $('#highlight').css('display', 'block');
                $('#requestMax').css('display', 'none');

                $.getJSON("http://107.170.149.67/reset", function() {
                        go(max.val());
                     }).fail()

